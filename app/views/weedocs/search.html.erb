	<option value="?sign2=<%=weedoc.sign2%>&sign1=<%=weedoc.sign1%>&organ=<%=weedoc.organ%>&category=<%=params[:category]%>"> <%= weedoc.sign2 %> </option>
	<% end %>
</select>

<select id="select_strong" onchange="window.open(value, '_self');">
	<option selected disabled>--<%= params[:strong] ? params[:strong] : "강도"%>--</option>
	<% @wee_strong.each do |weedoc| %>
	<option value="?strong=<%=weedoc.strong%>&sign2=<%=weedoc.sign2%>&sign1=<%=weedoc.sign1%>&organ=<%=weedoc.organ%>&category=<%=params[:category]%>"> <%= weedoc.strong %> </option>
	<% end %>
</select>



