


<select id="select_cat" onchange="window.open(value, '_self');">
	<option selected disabled>--대분류--</option>
	<% @wee_category.each do |weedoc| %>
	<option value="?category=<%=weedoc.category%>" <%= "selected" if params[:category] == weedoc.category %> > <%= weedoc.category %> </option>
	<% end %>
</select>



<select id="select_organ" onchange="window.open(value, '_self');">
	<option selected disabled>--<%= params[:organ] ? params[:organ] : "기관"%>--</option>
	<% @wee_organ.each do |weedoc| %>
	<option value="?organ=<%=weedoc.organ%>&category=<%=params[:category]%>"> <%= weedoc.organ %> </option>
	<% end %>
</select>


<select id="select_sign1" onchange="window.open(value, '_self');">
