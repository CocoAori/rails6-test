<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<style>
th, td{padding-left: 20px;
		padding-left: 30px;}
</style>


<table>
  <thead>
    <tr>
	  <th>No.</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each_with_index do |blog, index| %>
      <tr>
		<td><%= index+1 %></td>
        <td><%= link_to "#{blog.title}", blog %></td>
        <td><%= link_to 'Show', blog %></td>
		<td><%= link_to(blog) do %>
		    <%= blog.title %>
		    <% end %>
		  </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>

<p>
	<%= link_to "Home", posts_index_path %>
</p>

