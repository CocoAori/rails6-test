<%= render 'header' %>

<p id="notice"><%= notice %></p>

<h1>한문장일기(1文章日記）</h1>


<style>
th, td{padding-left: 20px;
		padding-left: 30px;}
</style>


<table>
  <thead>
    <tr>
	  <th>No.</th>
      <th>Title</th>
	  <th>date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each_with_index do |blog, index| %>
      <tr>
		<td><%= index+1 %></td>
        <td><%= link_to "#{blog.title}", blog %></td>
		<td><%= blog.created_at.strftime "%m月%d日" %></td>
		<td> &#x1F618;<b><%= blog.thumbup %></b></td>
		<!--
		<td><%= link_to 'Show', blog %></td>
		<td><%= link_to(blog) do %>
		    <%= blog.title %>
		    <% end %>
		  </td>
		-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to '쓰기(書き込み)', new_blog_path, class: 'btn' %>
<% else %>
<%= link_to "login해서 글쓰기(loginして書き込み)", user_session_path %>
<p>
<%= link_to '쓰기(書き込み)', new_blog_path, class: 'btn' %>	
</p>
<% end %>


